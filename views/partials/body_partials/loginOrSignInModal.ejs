<div class="modal fade" id="loginModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">        
        <div class="container" id="cont">
          <button type="button" class="close" data-dismiss="modal">&times;</button>     
          <form method="post" action="/peeraide_api/signin_user" id="login-form">
            <h2 id="e-l"><span><i class="fa fa-user fa-lg" aria-hidden="true" id="user-login-font-a"></i>&nbsp</span> Login</h2>
            <div class="input-container">
              <button class="submit" id="s"><span><i class="fa fa-sign-in" aria-hidden="true"></i></span></button>
              <input type="text" class="user" placeholder="Email/Username" id="u-n" name="email" required="required"/>
              <input type="password" class="pass"placeholder="Password" id="p" name="password" required="required"/>
            </div>
            <a class="btn btn-default" href="#signup-modal" role="button" id="r-l" data-toggle="modal" data-dismiss="modal"><span><i class="fa fa-user-plus fa-lg" aria-hidden="true"></i>&nbsp&nbsp</span>Sign up</a>
            <p><a href="/peeraide/forgotPassword" id="f-p">Forgot Password? </a></p>
          </form>
        </div>   
      </div>      
    </div>
  </div>
</div>

<div class="modal fade" id="signup-modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body"> 
        <div class="signup-container" id="signup-cont">
          <button type="button" class="close" data-dismiss="modal">&times;</button> 
          <form method="post" action="/peeraide_api/signup_user" id="signup-form">
            <h2 id="e-l"><span><i class="fa fa-user-plus fa-lg" aria-hidden="true" id="sign-up-logo"></i>&nbsp</span> Sign Up</h2>
            <div class="input-container">
              <div>
                <span class="inlineinput">
                  <input type="text" placeholder="FirstName" id="signup-u-n" name="firstName" required="required"/>
                </span>
                <span class="inlineinput">
                  <input type="text" placeholder="LastName" id="signup-u-n" name="lastName" required="required"/>
                </span>
              </div>
              <input type="email" placeholder="Email" id="signup-e" name="email" required="required"/>
              <input type="text" placeholder="Username" id="signup-u-n1" name="actual_username" required="required"/>
              <input type="password" placeholder="Password" id="signup-pass" name="pwd" required="required"/>
              <input type="password" placeholder="Re-enter password" id="signup-confirm-pass" name="conf-pass" required="required"/>
            </div>
            <div class="Session1">
              <input type="radio" id="radio03" name="gender" value="Male"/>
              <label for="radio03" id="male_label"><span></span>Male&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</label>

              <input type="radio" id="radio04" name="gender" value="Female"/>
              <label for="radio04" id="female_label"><span></span>Female</label>
            </div>
            <button class="submit" id="signup-submit" class="btn"><span><i class="fa fa-user-plus fa-lg" aria-hidden="true"></i></span>&nbsp&nbspSign up</button>
            <p id="agreement"> By clicking this button, you agree to our <span><a href="#" id="t-s">Terms of services </a><span></p>
          </form>
        </div>       
      </div>
    </div>
  </div>
</div>